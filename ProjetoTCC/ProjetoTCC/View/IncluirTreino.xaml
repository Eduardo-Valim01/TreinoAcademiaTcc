<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoTCC.View.IncluirTreino"
             Title="IncluirTreino">
    
    <VerticalStackLayout Padding="20">
        <Label Text="Adicionar Novo Treino" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,20"/>
        
        <Image x:Name="FotoAparelhoImage" Source="altere.png" WidthRequest="100" HeightRequest="100" Aspect="AspectFill"/>
        <Entry x:Name="FotoAparelhoEntry" Placeholder="URL da Imagem"/>
        
        <Entry x:Name="NumeroSeriesEntry" Placeholder="Número de Séries"/>
        <Entry x:Name="RepeticoesEntry" Placeholder="Número de Repetições"/>
        
        <Button Text="Salvar" Clicked="OnSalvarClicked"/>
        <Button Text="Cancelar" Clicked="OnCancelarClicked" Margin="0,10,0,0"/>
    </VerticalStackLayout>
</ContentPage>